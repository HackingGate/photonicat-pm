#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk
include /usr/share/dpkg/architecture.mk

%:
	dh $@

override_dh_install:
	echo "src/*.c usr/src/photonicat-pm-$(DEB_VERSION_UPSTREAM)/src/" > debian/photonicat-pm-dkms.install
	echo "src/*.h usr/src/photonicat-pm-$(DEB_VERSION_UPSTREAM)/src/" >> debian/photonicat-pm-dkms.install
	echo "src/Makefile usr/src/photonicat-pm-$(DEB_VERSION_UPSTREAM)/src/" >> debian/photonicat-pm-dkms.install
	dh_install

override_dh_dkms:
	dh_dkms -V $(DEB_VERSION_UPSTREAM)

override_dh_builddeb:
	dh_builddeb -- -Zxz
